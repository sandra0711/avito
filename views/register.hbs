<script defer src="/js/register.js"></script>
<div class="container" style="margin-top: 100px">
  <form action="/users/register" method="POST" class="form-horizontal" role="form">
    <h3>Регистрация</h3>
    <div class="form-group">
      <label for="firstName" class="col-sm-3 control-label">Имя</label>
      <div class="col-sm-9">
        <input type="text" id="firstName" placeholder="Введите имя" class="form-control" name="firstName" autofocus>
      </div>
    </div>
    <div class="form-group">
      <label for="lastName" class="col-sm-3 control-label">Фамилия</label>
      <div class="col-sm-9">
        <input type="text" name="lastName" id="lastName" placeholder="Введите фамилию" class="form-control" autofocus>
      </div>
    </div>
    <div class="form-group">
      <label for="email" class="col-sm-3 control-label">Email* </label>
      <div class="col-sm-9 emailDiv">
        <input type="email" id="email" placeholder="Введите Email" class="form-control" name= "email" required>
        <p><small class="alreadyExist" style="color: red"></small></p>
      </div>
    </div>
    <div class="form-group">
      <label for="password" class="col-sm-3 control-label">Пароль*</label>
      <div class="col-sm-9">
        <input type="password" name="password1" id="password1" placeholder="Придумайте пароль" class="form-control" required>
      </div>
    </div>
    <div class="form-group passwordSame">
      <label for="password" class="col-sm-3 control-label">Пароль еще раз*</label>
      <div class="col-sm-9">
        <input type="password" id="password2" placeholder="Подтвердите пароль" class="form-control" required>
        <p><small class="passwordWrong" style="color: red"></small></p>
      </div>
    </div>
    <div class="form-group">
      <div class="col-sm-9 col-sm-offset-3">
        <span class="help-block"><small>*Обязательные поля</small></span>
      </div>
    </div> 
      <button id="register" type="submit" class="btn btn-primary btn-block">Зарегистрироваться</button>
  </form> 
</div>
